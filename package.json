{
  "license": "GPL",
  "type": "commonjs",
  "dependencies": {
    "@oxygenium/cli": "workspace:*",
    "@oxygenium/web3": "workspace:*",
    "@oxygenium/web3-test": "workspace:*",
    "@oxygenium/web3-wallet": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.8",
    "eslint": "^9.21.0",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "clean": "rm -rf .parcel-cache && pnpm -r run clean",
    "build": "pnpm --stream -r run build",
    "codegen": "ts-node gen.ts",
    "test": "jest -i --config ./jest-config.json --forceExit",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --fix --ext .ts,.txs",
    "audit": "npm audit --omit=dev",
    "update-schemas": "pnpm --stream -r run update-schemas",
    "version": "pnpm --stream -r exec npm version",
    "publish": "npm run build && pnpm -r publish --access public --no-git-checks"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSameLine": false,
    "trailingComma": "none"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0",
    "pnpm": ">=7.0.0"
  },
  "pnpm": {
    "overrides": {
      "semver@<7.5.2": ">=7.5.2",
      "protobufjs@>=6.10.0 <7.2.4": ">=7.2.4",
      "semver@>=7.0.0 <7.5.2": ">=7.5.2",
      "axios@>=0.8.1 <0.28.0": ">=0.28.0",
      "elliptic@>=4.0.0 <=6.5.6": ">=6.5.7",
      "elliptic@>=2.0.0 <=6.5.6": ">=6.5.7",
      "elliptic@>=5.2.1 <=6.5.6": ">=6.5.7",
      "webpack@>=5.0.0-alpha.0 <5.94.0": ">=5.94.0",
      "nanoid@<3.3.8": ">=3.3.8",
      "elliptic@<6.6.0": ">=6.6.0",
      "elliptic@<6.5.6": ">=6.5.6",
      "elliptic@<=6.6.0": ">=6.6.1",
      "parse-duration@<2.1.3": ">=2.1.3",
      "serialize-javascript@<6.0.2": ">=6.0.2",
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}
