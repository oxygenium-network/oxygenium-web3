{
  "name": "@oxygenium/walletconnect-provider",
  "description": "Oxygenium Provider for WalletConnect Protocol",
  "version": "1.12.1",
  "author": "Oxygenium dev",
  "homepage": "https://github.com/oxygenium-network/walletconnect",
  "repository": {
    "type": "git",
    "url": "git@github.com:oxygenium-network/walletconnect.git"
  },
  "license": "Apache-2.0",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "unpkg": "dist/umd/index.min.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "wallet",
    "walletconnect"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build:pre": "run-s clean",
    "build:cjs": "npx tsc -p tsconfig.cjs.json",
    "build:umd": "webpack",
    "build": "run-s build:pre build:cjs build:umd",
    "test": "jest --detectOpenHandles -i --force-exit --config ./jest-config.json",
    "test:watch": "env TS_NODE_PROJECT=\"tsconfig.cjs.json\" jest --timeout 3000 --exit -r ts-node/register --watch --watch-files . ./test/**/*.spec.ts",
    "watch": "tsc -p tsconfig.json --watch",
    "lint": "eslint -c '.eslintrc' './{src,test}/**/*.ts'",
    "lint:fix": "eslint -c '.eslintrc' --fix './{src,test}/**/*.ts'"
  },
  "dependencies": {
    "@oxygenium/web3": "workspace:^",
    "@oxygenium/web3-wallet": "workspace:^",
    "@walletconnect/sign-client": "2.19.0",
    "@walletconnect/types": "2.19.0",
    "@walletconnect/utils": "2.19.0",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/node": "^7.26.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/register": "^7.25.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@walletconnect/jsonrpc-utils": "1.0.8",
    "core-js": "^3.41.0",
    "crypto-browserify": "^3.12.1",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^29.7.0",
    "lokijs": "^1.5.12",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "prettier": "^3.5.2",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "6.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
